<!-- HOMEPAGE TEMPLATE -->
<!DOCTYPE html>
<html>

<head>
    <title>Weather app</title>
    <link href="css/style.css" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script src="https://use.fontawesome.com/releases/v5.15.1/js/all.js"></script>
    <!-- INCLUDE JQUERY  -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>


<body>
    <!-- LOAD NAVBAR EJS PAGE FROM NAVBAR FILE HERE -->

    <div class="header1">
        <div class="search">
            <form action="/" method="POST">
                <form>
                    <div class="homepage-form-box">
                        <h1 class="title">WEATHER</h1>
                        <!-- <i class='fas fa-cloud-sun' style='font-size:40px'></i> -->
                        <div class="homepage-form-box">
                            <input type="text" class="test" name="city"
                                placeholder="Enter any worldwide town or city" required>
                                <button class="search-btn"><i class="fas fa-search"></i></button>
                            <!-- <button>search</button> -->
                        </div>
                    </div>
                </form>
            </form>
        </div>
    </div>

    <div></div>
    <% if(forecast !== null){ %>
    <!-- if user enters valid weather lcoation -->
    <p><%= forecast %></p>
    <% } %>

    <% if(error !== null){ %>
    <!-- if error isn't equal to nothing (if there's an error) -->
    <p><%= error %></p>
    <% } %>

    <div id="app1"></div>
    <div class="search">
        <form action="/weather">
        </form>
    </div>

</body>

</html>